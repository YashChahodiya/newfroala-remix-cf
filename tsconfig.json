{
  "compilerOptions": {
    "target": "ES2020",                       // Use a recent ECMAScript version
    "module": "ES2020",                       // Specify module code generation
    "lib": ["DOM", "DOM.Iterable", "ES2020"], // Specify library files to be included in the compilation
    "allowJs": true,                          // Allow JavaScript files to be compiled
    "skipLibCheck": true,                     // Skip type checking of declaration files
    "esModuleInterop": true,                  // Enables emit interoperability between CommonJS and ES Modules
    "allowSyntheticDefaultImports": true,     // Allow default imports from modules with no default export
    "strict": true,                           // Enable all strict type-checking options
    "forceConsistentCasingInFileNames": true, // Ensure file casing matches the casing in imports
    "moduleResolution": "node",               // Use Node.js module resolution strategy
    "resolveJsonModule": true,                // Include modules imported with .json extension
    "isolatedModules": true,                  // Ensure each file can be safely transpiled without relying on other imports
    "noEmit": true,                           // Do not emit outputs
    "jsx": "react-jsx",                       // Use the new JSX transform introduced in React 17
    "baseUrl": ".",                           // Base directory to resolve non-relative module names
    "paths": {
      "~/*": ["./app/*"]                      // Path alias for the app directory
    }
  },
  "include": ["remix.env.d.ts", "**/*.ts", "**/*.tsx"], // Include all TypeScript files
  "exclude": ["node_modules"]                           // Exclude the node_modules directory
}
